{erl_opts, [debug_info]}.
{deps, [
  png
]}.

{shell, [
  % {config, "config/sys.config"},
    {apps, [orderbackend]}
]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used,
               deprecated_function_calls, deprecated_functions]}.

{alias, [
  {check, [xref, dialyzer]}
]}.

{relx, [{release, {orderbackend, "0.0.1"},
         [orderbackend, png, mnesia],
         [{include_src, false}]},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.
